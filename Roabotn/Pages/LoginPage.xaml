<Page x:Class="Roabotn.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Roabotn.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">
    <Page.Resources>
        <ResourceDictionary Source="..\assets\dictionaries\maindictinarie.xaml"/>
    </Page.Resources>
    <Grid>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300"  >
            <StackPanel Orientation="Horizontal">
                <TextBlock>Логин</TextBlock>
                <TextBox  x:Name="login" Width="200" Margin="20,0,0,0" Text="Baltos"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock>Пароль</TextBlock>
                <TextBox  x:Name="password" Width="200" Margin="13,0,0,0" Text="255gsf"></TextBox>
            </StackPanel>
            <Button  Margin="0,20,0,0" Width="200" Height="40" FontSize="25" x:Name="loginButton" Click="loginButton_Click">Вход</Button>
        </StackPanel>
    </Grid>
</Page>
